import time
x = 0
def foo():
    global x
    x += 1
    print(x,'chances are over')
def introduction():
    print('intro story')
    time.sleep(2)
    print('choices for selection')
    start = time.time()
    option = input("enter you choice:")
    end = time.time() - start
    endtime = round(end)
    if endtime <= 7:
        if option == 'A' or option == 'a':
            print('a selected')
            #func_run()
        elif option == 'B' or option == 'b':
            print('b selected')
            #func_call()
        elif option == 'C' or option == 'c':
            print('c selected')
            print('died')
        else:
            print('select only from the given options')
    else:
        print('Died!!!!, Too long time to think')
        foo()
        global x
        if x < 3:
            introduction()
        else:
            print('Game Over!!!!!')
introduction()
